{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client", "react", "react-dom"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
